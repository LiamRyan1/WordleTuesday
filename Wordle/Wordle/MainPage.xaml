<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wordle.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <!--create a grid with 6 rows and 5 columns for the letters-->
            <Grid x:Name="LetterCaptureGrid"  HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"
                  HeightRequest="400" WidthRequest="300"
                  RowSpacing="1" ColumnSpacing="1" BackgroundColor="White"
                  Padding="20" >
            </Grid>



            <!-- on screen keyboard -->
            <Grid x:Name="Keyboard" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Padding="5">
                <Grid x:Name="Keys" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                </Grid>
            </Grid>
            <Button x:Name="StartWordle" Text="Begin Game" Clicked="StartWordle_Clicked" HorizontalOptions="Center" VerticalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
